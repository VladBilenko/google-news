{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "types": ["reflect-metadata"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": ["es6", "dom"],
    "strict": true
  },
  "include": [
    "./src/**/*",
    "node_modules/awesome-typescript-loader/lib/runtime.d.ts",
    "node_modules/@types/jest/index.d.ts"
  ]
}